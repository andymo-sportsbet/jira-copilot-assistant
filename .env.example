# JIRA Configuration
JIRA_BASE_URL=https://amo3167.atlassian.net
# Your Jira login email
JIRA_EMAIL=amo3167@gmail.com

# Your API token (generate from Atlassian Account Settings)
JIRA_API_TOKEN=placeholder

JIRA_PROJECT=MSPOC

# Story Points Field (Epic 5 - AI Estimation)
# The custom field ID for Story Points in your JIRA instance
# Default: customfield_10016 (common for Scrum boards)
# To find your field ID:
#   1. Go to JIRA issue view
#   2. Open browser DevTools > Network tab
#   3. Look for API calls containing "customfield_" 
#   4. Find the field labeled "Story Points"
JIRA_STORY_POINTS_FIELD=customfield_10016

# SSL Configuration (for certificate issues)
JIRA_VERIFY_SSL=false

# GitHub Configuration (optional, for enhanced features)
GITHUB_TOKEN=your-github-token-here
GITHUB_ORG=yourorg

# Confluence Configuration (Epic 4 - Coming Soon)
# Note: Uses same Atlassian credentials as JIRA
CONFLUENCE_BASE_URL=https://sportsbet.atlassian.net/wiki
# CONFLUENCE_API_TOKEN - uses JIRA_API_TOKEN (same Atlassian account)

# LLM Configuration (for AI-generated technical guides)
# Enable LLM-powered technical guide generation (default: false, uses template)
USE_LLM_GENERATION=false

# OpenAI API (required for LLM generation)
# Get your API key from: https://platform.openai.com/api-keys
# Cost: ~$0.01-0.05 per ticket using GPT-4
OPENAI_API_KEY=

# Script Configuration
DEBUG=false
